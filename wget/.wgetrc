# Opinionated wget defaults for reliable downloads
check_certificate = on
hsts-file = ~/.local/share/wget-hsts
hsts = on
content-disposition = on
timestamping = on
continue = on
no-clobber = off
show-progress = on

# Networking
prefer-family = IPv4
retry_connrefused = on
tries = 5
waitretry = 2
connect-timeout = 15
read-timeout = 30
dns-timeout = 15

# Courtesy
restrict-file-names = windows
