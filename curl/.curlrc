# Smart defaults for curl invocations used via GNU Stow
# HTTP/HTTPS behaviour
location
proto-default = https
compressed
show-error
fail
user-agent = "curl/cli-config"

# Connection resilience
connect-timeout = 10
retry = 3
retry-delay = 2
retry-max-time = 30
retry-connrefused
max-time = 0

# Output and transfer limits
progress-bar
speed-time = 15
speed-limit = 1024
